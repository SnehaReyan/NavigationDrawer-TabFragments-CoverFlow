<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/video_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img1"
        android:layout_marginStart="@dimen/margin_5dp"/>

    <ImageView
        android:id="@+id/video_time_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/video_image"
        android:layout_below="@+id/video_title_text"
        android:layout_margin="@dimen/margin_5dp"
        android:src="@drawable/time"/>

    <TextView
        android:id="@+id/video_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/video_image"
        android:layout_margin="@dimen/margin_5dp"/>

    <TextView
        android:id="@+id/video_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/video_time_image"
        android:layout_below="@+id/video_title_text"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/video_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/video_image"
        android:layout_below="@+id/video_time_text"
        android:layout_margin="@dimen/margin_5dp"/>

        </RelativeLayout>
</android.support.v7.widget.CardView>


    </LinearLayout>